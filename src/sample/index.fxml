<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0"
      prefWidth="640.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sample.Controller">
    <TabPane minWidth="600.0" prefHeight="400.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE">
        <Tab text="Input">
            <TextArea fx:id="input" prefHeight="250.0" prefWidth="640.0" />
        </Tab>
        <Tab text="Output">
            <TextArea fx:id="output" prefHeight="250.0" prefWidth="640.0" />
        </Tab>
    </TabPane>
    <TitledPane expanded="false" prefHeight="70.0" prefWidth="640.0" text="Errors" fx:id="errorPane">
        <TextArea minHeight="100" minWidth="640" fx:id="errors" />
    </TitledPane>
    <ToolBar prefHeight="7.0" prefWidth="600.0">
        <Button fx:id="open" mnemonicParsing="false" onAction="#openFile" text="Open" />
        <Button fx:id="save" onAction="#saveFile" text="Save" />
        <Button fx:id="convert" onAction="#convertFile" text="Convert" />
    </ToolBar>
</VBox>
